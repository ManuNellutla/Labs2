{
    "input_dir": "data/input", 
    "output_dir": "data/output",
    "llm": {
        "type": "gemini",
        "model": "gemini-2.0-flash",
        "api_key": "env:GOOGLE_API_KEY"
    },
    "context_window": 128000,
    "chunk_size": 100000,
    "chunk_overlap": 500,
    "file_extensions": [".m", ".py", ".js", ".java", ".go", ".c", ".cpp", 
                        ".cs", ".php", ".rb", ".ts", ".jsx", ".tsx", ".sh", 
                        ".json", ".yaml", ".xml", ".html", ".css", ".md", ".txt"],
    "output_artifacts": [
        "summary_markdown",
        "detailed_json"
    ],
    "artifact_templates": {
        "summary_markdown": {
            "template": "report_summary.jinja2",
            "format": "markdown"
        },
        "security_markdown": {
            "template": "report_security.jinja2",
            "format": "markdown"
        },
        "detailed_json": {
            "template": "report_detailed_json.jinja2",
            "format": "json"
        }
    },
    "prompts": {
        "analysis_template_path": "prompts/analysis_prompt.txt",
        "summary_template_path": "prompts/summary_prompt.txt"
    }
}